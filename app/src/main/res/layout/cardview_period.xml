<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewPeriod"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_period_height"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/calendar_img" />

        <LinearLayout
            android:id="@+id/linearLayoutPeriod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient_period"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tvPeriodCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_arrow_right"
                android:text="@string/textperiod_card"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvDateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_date"
                android:gravity="center_vertical"
                android:text="@string/textdate_card"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>